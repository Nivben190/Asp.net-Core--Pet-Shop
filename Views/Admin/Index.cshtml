@{
    ViewData["Title"] = "Admin Page";
}
@model IEnumerable<amirProject.Models.Animal>

<head>
    <link type="text/css" rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/amirProject.styles.css" asp-append-version="true" />
</head>
<body>
    <div>
        <h1 class="display-4 text-center">Admin Page </h1>

        <a class="addNew" asp-action="BackToAnimalPage" asp-controller="Animal">Add New Animal</a>

        <div>

            <div class="ContainList">



                @foreach (var animal in Model)
                {
                    <div class="card">
                        <div class="container">
                            <h4><b>@animal.Name</b></h4>
                            <img class="img" src="@animal.PictureSrc" />
                            <p>@animal.Description</p>

                            <a class="link" style="color:black" asp-action="DeleteAnimal" asp-controller="Admin" asp-route-id="@animal.AnimalId">Delete</a>
                            <a class="link" asp-action="EditAnimal" asp-controller="Admin" asp-route-id="@animal.AnimalId">Edit</a>
                        </div>
                    </div>
                }
            </div>
        </div>


        <a asp-action="Index" asp-controller="Animal">Go Back</a>
    </div>
    </div>
</body>


