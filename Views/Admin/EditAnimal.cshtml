

@model amirProject.Models.Animal


@using (Html.BeginForm("UpdateAnimals", "Admin", FormMethod.Post))
{

    @Html.HiddenFor(model => model.AnimalId)
    <br />

    @Html.Label("Animal Name");
    @Html.TextBoxFor(model => model.Name)
    <br />

    @Html.Label("Animal Age");
    @Html.TextBoxFor(model => model.Age)
    <br />

    @Html.Label("Animal Desc");
    @Html.TextBoxFor(model => model.Description)
    <br />
    @Html.Label("PicSrc");
    @Html.TextBoxFor(model => model.PictureSrc)
    <br />

    <fieldset>
        <p class="SearchByCategory"> Category:</p> <select id="categoryId" name="categoryId">

            

            <option value="1">Birds</option>

            <option value="2">Mammals</option>


            <option value="3">Fishes</option>

            <option value="4">Amphibians</option>


            <option value="5">reptiles</option>

        </select>
        <input class="submit" type="submit" value="Show Me" />

    </fieldset>
    <input type="submit" value="Edit Animal" />

}
