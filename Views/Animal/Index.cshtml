@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<amirProject.Models.Animal>

<head>

    <link type="text/css" rel="stylesheet" href="~/css/niv.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/amirProject.styles.css" asp-append-version="true" />
</head>
<body>
   <div class="text-center">
        <h1 class="display-4" style="color:black;">The Best Pet Shop In Town </h1>


        <form style="background-color:white; border:none;" action="/Animal/Index" method="post">

            <fieldset>
           <p class="SearchByCategory">Search By Category...</p> <select id="Category"  name="Category">

    <option value="Show All">Show All</option>

    <option value="Birds">Birds</option>

    <option value="Mammal">Mammals</option>


    <option value="Fish">Fishes</option>

    <option value="Amphibians">Amphibians</option>


    <option value="reptiles">reptiles</option>

</select>
                <input class="submit" type="submit" value="Show Me" /> 

            </fieldset>

        </form>
      
        <div>
            <div class="ContainList">

                @foreach (var animal in Model)
                {
                        
                    <div class="card" style="width: 18rem; height:20rem">
                        <img class="card-img-top" style="height:15rem;" src="@animal.PictureSrc" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@animal.Name</h5>
                            <a asp-action="AnimalPage" class="ShowMeMore" asp-route-id="@animal.AnimalId" asp-controller="Animal">Show Me More</a>
                        </div>

                    </div>

                }
            </div>
        </div>
    </div>
</body>


